<project name="forest-fires" default="def" basedir=".">

	<property name="src" location="src"/>
	<property name="build" location="bin"/>

	<target name="def">
		<javac srcdir="${src}" destdir="${build}"/>
	</target>

	<target name="clean">
		<delete>
			<fileset dir="${build}" includes="*.class"/>
		</delete>
	</target>

</project>
